<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialogueimage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloudy_weather"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_below="@id/dialogueimage"
        android:id="@+id/dialoguetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="hello world ka dck ka ca a ca cak cak cak a cak ca  j ca aj ca"
        android:textColor="@color/blackcolor"

        android:layout_marginBottom="5dp"/>
    
    <TableLayout
        android:id="@+id/dialogueicons"
        android:layout_width="match_parent"
        android:layout_below="@+id/dialoguetitle"
        android:layout_height="wrap_content">

        <TableRow android:layout_height="70dp">

            <ImageView
                android:id="@+id/dialoguetwitter"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/dialogue_border"
                android:src="@drawable/bluetwitter"/>

            <ImageView
                android:id="@+id/dialoguebookmark"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/dialogue_border"
                android:src="@drawable/detailedbookmarkbigsize"/>

        </TableRow>


    </TableLayout>


</RelativeLayout>