<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >

            <ImageView
                android:id="@+id/latestnewscardimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/latestnewscardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/latestnewscardimage"
                android:text=""
                android:textSize="15sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_marginRight="60dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/latestnewscardtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@id/latestnewscardimage"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/greyicons"

                 />

            <TextView
                android:id="@+id/orbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@id/latestnewscardtime"
                android:text="|"
                android:textSize="13sp"
                android:textColor="@color/selectedicon"

                />

            <TextView
                android:id="@+id/latestnewscardsource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@id/orbar"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/greyicons"

               />
                <ImageView
                    android:id="@+id/latestnewscardbookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/latestnewscardimage"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/ic_bookmark_border_black_24dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cardseperator"/>

</LinearLayout>
